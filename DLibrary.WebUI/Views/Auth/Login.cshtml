@model BookStore.WebUI.Models.LoginViewModel
@{
    ViewBag.Title = "Вход в систему";
}
<div class="form" style="width:400px">
    <h2>Вход в систему <i class="fas fa-book-open fa-spin"></i></h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Пожалуйста, заполните указанные поля</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger", @role = "alert" })
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 input-group" style="width:350px">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="far fa-envelope"></i></div>
                    </div>
                    @Html.EditorFor(model => model.UserName, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            @type = "email",
                            @placeholder = "Ваш E-mail"
                        }
                    })
                </div>
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "col-md-10 text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 input-group" style="width:350px">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-key"></i></div>
                    </div>
                    @Html.EditorFor(model => model.Password, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            @type = "password",
                            @placeholder = "Ваш пароль",
                            @style = "width:50%"
                        }
                    })
                </div>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "col-md-10 text-danger" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Войти" class="btn btn-outline-primary" />
                </div>
            </div>
        </div>
    }
    <div class="form-footer">
        Еще нет профиля? @Html.ActionLink("Создайте его", "Register") прямо сейчас!
        <br />
        @Html.ActionLink("Вернуться на главную страницу", "List", "Book")
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>